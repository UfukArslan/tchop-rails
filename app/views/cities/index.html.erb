<p id="notice"><%= notice %></p>

<h1>Cities</h1>

<table class="striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Npa</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cities.each do |city| %>
      <tr>
        <td><%= city.name %></td>
        <td><%= city.npa %></td>
        <td><%= link_to 'Show', city %></td>
        
            
            <!-- afficher les boutons 'edit' et 'destroy' seulement si le user est connectÃ© --> 
            <td>
              <% if user_signed_in? %>     
                <%= link_to 'Edit', edit_city_path(city) %>
              <% end %>
            </td>
            <td>
              <% if user_signed_in? %>     
                <%= link_to 'Destroy', city, method: :delete, data: { confirm: 'Are you sure?' } %>
              <% end %>
            </td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>



<a class="waves-effect waves-light btn-large" href="<%= new_city_path %>">add city</a>
