<h3>Search Result</h3>  
    
<div class="row">
  <div class="col s12">

    <table class="striped">
      <thead>
        <tr>
          <th>Name</th>
          <th>Description</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @results.each do |restaurant| %>
          <tr>
            <td><%= restaurant.name %></td>
            <td><%= restaurant.description %></td>
            <td><%= link_to 'Show', restaurant %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

  </div>
</div>